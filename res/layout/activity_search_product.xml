<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@android:color/white"
    android:orientation="vertical">
	<RelativeLayout 
        android:id="@+id/Product_TOP"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/header_bg">
        
	    
       <Button
            android:id="@+id/Product_Button_back"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/back_an"
            />
       
       
       <TextView
        android:id="@+id/Product_TextView_tabBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="20dip" />
    </RelativeLayout>
   <LinearLayout 
    
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 
    	android:background="@android:color/white"
    	android:orientation="vertical">

	<ListView 
	    android:id="@+id/Sort__Search_ListView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:cacheColorHint="#00000000" 
        android:divider="@drawable/listview_line"
        android:dividerHeight="1px">
	    
	</ListView>
</LinearLayout>
</LinearLayout>
